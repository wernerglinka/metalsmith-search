{
  "name": "metalsmith-search",
  "version": "0.0.2",
  "description": "Modern Metalsmith search plugin with Fuse.js and component-based indexing",
  "keywords": [
    "metalsmith",
    "metalsmith-plugin",
    "search",
    "fuse.js",
    "fuzzy-search",
    "static-site-search",
    "component-based"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wernerglinka/metalsmith-search.git"
  },
  "bugs": {
    "url": "https://github.com/wernerglinka/metalsmith-search/issues"
  },
  "homepage": "https://github.com/wernerglinka/metalsmith-search",
  "license": "MIT",
  "author": "Werner Glinka <werner@glinka.co>",
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs",
    "default": "./lib/index.js"
  },
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "microbundle --entry src/index.js --output lib/index.js --target node -f esm,cjs --strict --generateTypes=false",
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "c8 --include=src/**/*.js --reporter=lcov --reporter=text-summary mocha 'test/index.test.js' 'test/cjs.test.cjs' 'test/comprehensive.test.js' 'test/utilities.test.js' -t 5000",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "pre-release": "npm run lint && npm run format:check && npm test && npx metalsmith-plugin-mcp-server validate .",
    "prepublishOnly": "npm run build",
    "release:patch": "./scripts/release.sh patch --ci",
    "release:minor": "./scripts/release.sh minor --ci",
    "release:major": "./scripts/release.sh major --ci",
    "release:check": "npm run lint:check && npm run build && release-it --dry-run",
    "test": "c8 --include=src/**/*.js mocha 'test/index.test.js' 'test/cjs.test.cjs' 'test/comprehensive.test.js' 'test/utilities.test.js' -t 15000",
    "test:coverage": "c8 npm test",
    "test:esm": "c8 --include=src/**/*.js mocha test/index.test.js -t 15000",
    "test:cjs": "c8 --include=src/**/*.js mocha test/cjs.test.cjs -t 15000",
    "depcheck": "depcheck"
  },
  "mocha": {
    "timeout": 10000
  },
  "dependencies": {
    "fuse.js": "^7.0.0"
  },
  "devDependencies": {
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "depcheck": "^1.4.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "metalsmith": "^2.5.0",
    "microbundle": "^0.15.1",
    "mocha": "^11.2.2",
    "prettier": "^3.5.3",
    "release-it": "^19.0.2"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
